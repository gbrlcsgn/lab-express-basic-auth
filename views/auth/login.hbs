<div id="form">
  <h2>Log In</h2>
  <form action="/login" method="POST">

    <label>
      Username
      <input type="text" name="username" placeholder="Username" />
    </label>

    <label>
      Password
      <input type="password" name="password" placeholder="Password" />
    </label>

    <button type="submit">Log In</button>

  </form>
</div>